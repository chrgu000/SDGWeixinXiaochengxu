

<view class="container">

  <view class="page-body">
   
    <view class="page-section">
      <view class="weui-cells__title">姓名</view>
      <view class="weui-cells weui-cells_after-title">
        <view class="weui-cell weui-cell_input">
          <input class="weui-input" maxlength="10" bindinput="bindKeyInput1" placeholder="请输入你的姓名" />
        </view>
      </view>
    </view>
   
    <view class="page-section">
      <view class="weui-cells__title">手机号码</view>
      <view class="weui-cells weui-cells_after-title">
        <view class="weui-cell weui-cell_input">
          <input class="weui-input" type="number" maxlength="11" bindinput="bindKeyInput2" placeholder="请输入你的手机号码" />
        </view>
      </view>
    </view>
    
    <view class="page-section">
      <view class="weui-cells__title">身份证</view>
      <view class="weui-cells weui-cells_after-title">
        <view class="weui-cell weui-cell_input">
          <input class="weui-input" type="idcard" maxlength="18" bindinput="bindKeyInput3" placeholder="请输入你的身份证号码" />
        </view>
      </view>
    </view>

	<view class="btn-area" id="buttonContainer">
      <button type="primary" bindtap="save"> 保存</button>
	 </view> 
  </view>

</view>
